<mapper namespace="mingo">
	<select id="selectCafe_BasicInfo" resultType="vo.Cafe_basicVO" parameterType="Integer">
		SELECT * FROM mydb.cafe_basic
		<where>
			<if test="cafe_id != null">
				cafe_id like '%${cafe_id}%'
			</if>
		</where>
	</select>
	<insert id="insertCafe" parameterType="vo.Cafe_imageVO">
		insert into mydb.cafe_image (cafe_img_url, cafe_img_num, cafe_id)  + 
		values + 
		(#{cafe_img_url}, + 
		(select ifnull(max(cafe_img_num),0)+1 from cafe_image where cafe_id=#{cafe_id}), + 
		#{cafe_id})	
	</insert>
	
	
